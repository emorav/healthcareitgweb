@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <base href="~/vhc/" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Health Care Portal</title>
  <link rel="stylesheet" href="../../vhc/styles.css">

  <!-- Polyfills for older browsers  -->
  <script src="../../node_modules/core-js/client/shim.min.js"></script>
  <script src="../../node_modules/zone.js/dist/zone.js"></script>
  <script src="../../node_modules/systemjs/dist/system.src.js"></script>

  <!-- SystemJS -->
  <script src="../../vhc/systemjs.config.js"></script>
  <script type="text/javascript">
    System.import('../../vhc/main.js').catch(function (err) { console.error(err); });
  </script>

  @Styles.Render("~/bundles/css")
  @Scripts.Render("~/bundles/vendor")
  <style>
    .color-ui-fabric {
      color: #0078d7 !important;
    }

    .fabric-loader {
      position: fixed;
      top: 50%;
      left: 50%;
    }

      .fabric-loader span {
        position: relative;
        left: -14px;
      }

    .fabric-overlay {
      background: rgba(252, 252, 252, 0.90);
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1000;
    }
  </style>
</head>
<body>
  @RenderBody()
</body>
</html>
